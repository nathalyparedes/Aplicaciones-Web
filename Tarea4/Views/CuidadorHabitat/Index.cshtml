@model IEnumerable<Tarea4.Models.CuidadorHabitat>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cuidador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Habitat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cuidador.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Habitat.Id)
            </td>
            <td>
               <a asp-action="Edit" asp-route-CuidadorId="@item.CuidadorId" asp-route-HabitatId="@item.HabitatId" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Details" asp-route-CuidadorId="@item.CuidadorId" asp-route-HabitatId="@item.HabitatId" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Delete" asp-route-CuidadorId="@item.CuidadorId" asp-route-HabitatId="@item.HabitatId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
