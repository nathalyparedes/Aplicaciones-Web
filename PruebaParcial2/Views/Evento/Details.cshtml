@model PruebaParcial2.Models.Evento

@{
    ViewData["Title"] = "Detalles del Evento";
}

<h1 class="text-center">Detalles del Evento</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="text-muted">Informaci√≥n del Evento</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                    <dt class="col-sm-4">Fecha</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Fecha)</dd>

                    <dt class="col-sm-4">Hora</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Hora)</dd>

                    <dt class="col-sm-4">Lugar</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Lugar.Direccion)</dd>
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>