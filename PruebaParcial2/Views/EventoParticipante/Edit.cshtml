@model PruebaParcial2.Models.EventoParticipante

@{
    ViewData["Title"] = "Editar Participante en Evento";
}

<h1 class="text-center">Editar Participante en Evento</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="text-muted">Actualice los campos para modificar el registro</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group mb-3">
                        <label asp-for="EventoId" class="form-label"></label>
                        <select asp-for="EventoId" class="form-select" asp-items="ViewBag.EventoId">
                            <option value="">Seleccione un evento</option>
                        </select>
                        <span asp-validation-for="EventoId" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="FechaInscripcion" class="form-label"></label>
                        <input asp-for="FechaInscripcion" class="form-control" type="date" />
                        <span asp-validation-for="FechaInscripcion" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ParticipanteId" class="form-label"></label>
                        <select asp-for="ParticipanteId" class="form-select" asp-items="ViewBag.ParticipanteId">
                            <option value="">Seleccione un participante</option>
                        </select>
                        <span asp-validation-for="ParticipanteId" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>